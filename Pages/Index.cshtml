                    <h5 class="card-title">Milk</h5>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a href="#" class="btn btn-success"><i class="bi bi-cart3"></i> ADD TO CART</a>
                    }
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-center">
                <div class="card-body">
                    <img class="card-img-top" src="~/images/peanut.jpg" style="height: 300px;" alt="">
                    <h5 class="card-title">Bulk nuts</h5>
                    @if (User.Identity?.IsAuthenticated == true)
